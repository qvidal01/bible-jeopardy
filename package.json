  "keywords": [
    "bible",
    "jeopardy",
    "trivia",
    "game",
    "multiplayer",
    "jw",
    "next.js",
    "react"
  ],
  "author": "qvidal01",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qvidal01/bible-jeopardy.git"
  },
  "bugs": {
    "url": "https://github.com/qvidal01/bible-jeopardy/issues"
  },
  "homepage": "https://github.com/qvidal01/bible-jeopardy#readme",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "type-check": "tsc --noEmit",
